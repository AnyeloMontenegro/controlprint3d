<div class="container p-4">
    <div class="row">
        {{#each impresoras}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="">
                        <h3 class="card-username text-uppercase">
                            {{username}}
                        </h3>
                    </a>
                    <p class="m-2">Ubicaci√≥n: {{ubicacion}}</p>
                    <a href="/impresoras/delete/{{id}}" class="btn btn-danger">Eliminar Impresora</a>
                    <a href="/impresoras/edit/{{id}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay impresoras registradas.</p>
                <a href="/impresoras/add">Ingresar Impresora</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>